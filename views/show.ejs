<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Expense Form</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/show.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  <body>
    <nav class="navbar">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/create">CreateNewHisab</a></li>
      </ul>
    </nav>

    <div class="card-container">
      <h4>Total Hisab Kitab</h4>
<% files.forEach(file => {%>
  <div class="card">
    <div class="filename">
      <span class="file-name"><%=file.split(".")[0]  %></span>
      <a href="/details/<%= file  %>" class="arrow-icon"><i class="fas fa-arrow-right"></i></a>
    </div>
    <div class="card-actions">
      <a href="/edit/<%= file  %>" class="edit-icon"><i class="fas fa-edit"></i></a>
      <a href="/delete/<%= file  %>" class="delete-icon"><i class="fas fa-trash-alt"></i></a>
    </div>
  </div>
  <% }); %>

     
    </div>
  </body>
</html>
